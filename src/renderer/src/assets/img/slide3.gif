<svg xmlns="http://www.w3.org/2000/svg" width="500" height="300" viewBox="0 0 500 300">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#a58dff" />
      <stop offset="100%" stop-color="#ee6a58" />
    </linearGradient>
    <filter id="shadow" x="-10%" y="-10%" width="120%" height="120%">
      <feGaussianBlur in="SourceAlpha" stdDeviation="5" />
      <feOffset dx="2" dy="2" result="offsetblur" />
      <feComponentTransfer>
        <feFuncA type="linear" slope="0.3" />
      </feComponentTransfer>
      <feMerge>
        <feMergeNode />
        <feMergeNode in="SourceGraphic" />
      </feMerge>
    </filter>
    <filter id="glow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur stdDeviation="5" result="blur" />
      <feComposite in="SourceGraphic" in2="blur" operator="over" />
    </filter>
  </defs>
  
  <rect width="500" height="300" fill="url(#bgGradient)" rx="15" ry="15" />
  
  <!-- 通知图标和动画 -->
  <g transform="translate(250, 150)" filter="url(#shadow)">
    <!-- 手机轮廓 -->
    <rect x="-75" y="-120" width="150" height="240" rx="20" ry="20" fill="white" />
    <rect x="-65" y="-110" width="130" height="220" rx="10" ry="10" fill="#f5f5f5" />
    
    <!-- 通知列表 -->
    <rect x="-55" y="-100" width="110" height="190" rx="5" ry="5" fill="white" />
    
    <!-- 通知项 -->
    <rect x="-45" y="-90" width="90" height="30" rx="5" ry="5" fill="#e8f4fd" />
    <text x="-35" y="-72" font-family="Arial, sans-serif" font-size="9" font-weight="bold" fill="#333">New property match!</text>
    <text x="-35" y="-62" font-family="Arial, sans-serif" font-size="7" fill="#666">2BR apartment in your area</text>
    
    <rect x="-45" y="-50" width="90" height="30" rx="5" ry="5" fill="#fff3e0" />
    <text x="-35" y="-32" font-family="Arial, sans-serif" font-size="9" font-weight="bold" fill="#333">Price reduced!</text>
    <text x="-35" y="-22" font-family="Arial, sans-serif" font-size="7" fill="#666">$200 off on favorite listing</text>
    
    <!-- 动画通知 -->
    <g filter="url(#glow)">
      <rect x="-45" y="-10" width="90" height="30" rx="5" ry="5" fill="#ffebee">
        <animate attributeName="fill-opacity" values="1;0.7;1" dur="2s" repeatCount="indefinite" />
      </rect>
      <text x="-35" y="8" font-family="Arial, sans-serif" font-size="9" font-weight="bold" fill="#c62828">Hot deal alert!</text>
      <text x="-35" y="18" font-family="Arial, sans-serif" font-size="7" fill="#d32f2f">New listing with 30% discount</text>
    </g>
  </g>
  
  <!-- 通知图标动画 -->
  <g transform="translate(180, 50)" filter="url(#glow)">
    <circle cx="0" cy="0" r="15" fill="#ff5252">
      <animate attributeName="r" values="15;17;15" dur="2s" repeatCount="indefinite" />
    </circle>
    <text x="0" y="4" font-family="Arial, sans-serif" font-size="10" font-weight="bold" fill="white" text-anchor="middle">3</text>
    <animateTransform attributeName="transform" type="translate" values="0 0; 0 -5; 0 0" dur="2s" repeatCount="indefinite" additive="sum" />
  </g>
  
  <!-- 装饰元素 -->
  <circle cx="100" cy="220" r="30" fill="rgba(255,255,255,0.1)" />
  <circle cx="400" cy="80" r="40" fill="rgba(255,255,255,0.1)" />
</svg>